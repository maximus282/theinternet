pipeline{
    agent {
    docker {
            image 'python:3.7.6-buster'
            args '-u root'
            }
    }
    stages {
        stage('initial') {
            steps {
                sh label: 'hello skrypt', script: 'echo \'Hello\''
                sh 'echo $USERNAME'
                }
        }
            stage('build') {
            steps {
                sh 'echo building'
                sh 'python3 --version'


            }
            }
            stage('run tests') {
            steps {
                sh 'echo testsin progress'
                sh 'pytest theinternet/tests/* '


            }
            }
        }
}